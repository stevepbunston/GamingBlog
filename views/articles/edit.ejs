<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Article</h1>
    <div class="col-6 offset-3">
        <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="article[title]" value="<%= article.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="game">Game</label>
                <input class="form-control" type="text" id="game" name="article[game]" value="<%= article.game %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" id="image" name="article[image]" value="<%= article.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="release">Release</label>
                <input class="form-control" type="text" id="release" name="article[release]" value="<%= article.release %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="console">Console</label>
                <input class="form-control" type="text" id="console" name="article[console]" value="<%= article.console %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="blog">Blog</label>
                <textarea class="form-control" type="text" id="game" name="article[blog]"><%= article.blog %></textarea>
            </div>
            <div class="mb-3">
            <button class="btn btn-info">Update</button>
            </div>
        </form>
        <div>
            <a href="/articles/<%= article._id %>">Back to <%= article.game %></a>
        </div>
    </div>
</div>